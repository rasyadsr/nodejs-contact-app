<div class="container">
  <div class="row">
    <div class="col-lg-8 col-md-6 col-sm-12">
      <h2>Daftar Contact</h2>
      <a href="/contacts/add" class="btn btn-primary mb-2"
        >Tambah data contact</a
      >
      <% if (msg.length !== 0) { %>
      <div class="alert alert-success" role="alert"><%= msg %></div>
      <% } %>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Nama</th>
            <th scope="col">NO HP</th>
            <th scope="col">Aksi</th>
          </tr>
        </thead>
        <tbody>
          <% if (contacts.length === 0) { %>
          <tr>
            <td colspan="4">
              <div class="alert alert-danger" role="alert">
                Data Masih kosong
              </div>
            </td>
          </tr>
          <% } %> <% contacts.forEach((contact, index) => { %>
          <tr>
            <th scope="row"><%= index + 1 %></th>
            <td><%= contact.nama %></td>
            <td><%= contact.noHp %></td>
            <td>
              <a
                href="/contacts/<%= contact.nama %> "
                class="btn badge rounded-pill text-bg-info"
                ><i class="bi bi-info-circle"></i> detail</a
              >
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>
