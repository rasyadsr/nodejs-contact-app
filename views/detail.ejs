<div class="container mt-3">
  <div class="row">
    <div class="col-md-8">
      <h2>Detail Contact</h2>
      <% if (!contact) { %>
      <div class="alert alert-danger" role="alert">Data tidak ditemukan!</div>
      <% } else { %>
      <div class="card" style="width: 18rem">
        <div class="card-body">
          <h5 class="card-title"><%= contact.nama %></h5>
          <h6 class="card-subtitle mb-2 text-muted"><%= contact.noHP %></h6>
          <p class="card-text"><%= contact.email %></p>
          <div class="mb-2">
            <a
              href="/contact/edit/<%= contact.nama %>"
              class="btn btn-info badge"
              >Edit</a
            >
            <a
              href="/contact/delete/<%= contact.nama %>"
              class="btn btn-danger badge"
              onclick="return confirm('Yakin mau di hapus?')"
              >Hapus</a
            >
          </div>
          <a href="/contact" class="card-link">&laquo Kembali</a>
        </div>
      </div>
      <% } %>
    </div>
  </div>
</div>
